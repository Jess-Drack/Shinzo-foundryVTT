<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.health.value" class="resource-label">Health</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.power.value" class="resource-label">Power</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.power.value" value="{{system.power.value}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.power.max" value="{{system.power.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.valuation.value" class="resource-label">Evaluation</label>
          <div class="resource-content flexrow flex-center flex-between">
          {{!--<input type="text" name="system.valuation.rating.value" value="{{system.valuation.rating.value}}" data-dtype="Number"/>--}}
          <span name="system.valuation.value" data-dtype="Number">{{system.valuation.value}}</span>
          </div>
        </div>

      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="stat">Statistiques</a>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="spells">Capacités</a>
    <a class="item" data-tab="items">Bagages</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    <div class="tab features" data-group="primary" data-tab="stat">
        <aside class="sidebar">

          {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
          use both the "grid" and "grid-Ncol" class where "N" can be any number
          from 1 to 12 and will create that number of columns.  --}}
          <div class="abilities flexcol gdsStatsGroup">
            {{#each system.gds_stats as |gd_stat key|}}
            <div class="ability flexrow flex-group-center gdsStatsGroupInput">
              <label for="system.gds_stats.{{key}}.value" class="resource-label rollable flexlarge align-left" data-roll="d100+@gds_stats.{{key}}.mod" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{localize (lookup @root.config.caracteristiques key)}}</label>
              <input type="text" name="system.gds_stats.{{key}}.value" value="{{gd_stat.value}}" data-dtype="Number"/>
              <span class="ability-mod rollable" data-roll="d100+@abilities.{{key}}.mod" data-label="{{localize (lookup @root.config.abilities key)}}">{{gd_stat.brut}}</span>
            </div>
            {{/each}}
          </div>

          <section class="grid grid-3col">
            <div class="abilities flexcol">
              {{#each system.rdp as |rd key|}}
              <div class="ability flexrow flex-group-center">
                <label for="system.rdp.{{key}}.value" class="resource-label rollable flexlarge align-left" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{localize (lookup @root.config.caracteristiques key)}}</label>
                <span type="text" name="system.rdp.{{key}}.value" data-dtype="Number">{{rd.value}}</span>
              </div>
              {{/each}}
            </div>

            <div class="abilities flexcol gdsStatsGroup">
              {{#each system.maitrises as |maitrise key|}}
              <div class="ability flexrow flex-group-center gdsStatsGroupInput">
                <label for="system.maitrises.{{key}}.value" class="resource-label rollable flexlarge align-left" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{localize (lookup @root.config.caracteristiques key)}}</label>
                <span class="ability-mod rollable" data-roll="d100+@gds_stats.{{key}}.mod" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{maitrise.value}}</span>
              </div>
              {{/each}}
            </div>

            <div class="abilities flexcol">
              {{#each system.rdm as |rd key|}}
              <div class="ability flexrow flex-group-center">
                <label for="system.rdm.{{key}}.value" class="resource-label rollable flexlarge align-left" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{localize (lookup @root.config.caracteristiques key)}}</label>
                <span type="text" name="system.rdp.{{key}}.value" data-dtype="Number">{{rd.value}}</span>
              </div>
              {{/each}}
            </div>
          </section>

          <section class="grid grid-2col">
            <div class="abilities flexcol">
              {{#each system.ss_stats.ss_stats1 as |ss_stat key|}}
              <div class="ability flexrow flex-group-center">
                <label for="system.ss_stats.ss_stats1.{{key}}.value" class="resource-label rollable flexlarge align-left" data-roll="d100+@ss_stats.ss_stats1.{{key}}.mod" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{localize (lookup @root.config.caracteristiques key)}}</label>
                <input type="text" name="system.ss_stats.ss_stats1.{{key}}.mod" value="{{ss_stat.mod}}" data-dtype="Number"/>
                <span class="ability-mod rollable" data-roll="d100+@gds_stats.{{key}}.mod" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{ss_stat.value}}</span>
              </div>
              {{/each}}
            </div>

            <div class="abilities flexcol">
              {{#each system.ss_stats.ss_stats2 as |ss_stat key|}}
              <div class="ability flexrow flex-group-center">
                <label for="system.ss_stats.ss_stats2.{{key}}.value" class="resource-label rollable flexlarge align-left" data-roll="d100+@ss_stats.ss_stats2.{{key}}.mod" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{localize (lookup @root.config.caracteristiques key)}}</label>
                <input type="text" name="system.ss_stats.ss_stats2.{{key}}.mod" value="{{ss_stat.mod}}" data-dtype="Number"/>
                <span class="ability-mod rollable" data-roll="d100+@gds_stats.{{key}}.mod" data-label="{{localize (lookup @root.config.caracteristiques key)}}">{{ss_stat.value}}</span>
              </div>
              {{/each}}
            </div>
          </section>
          <h4 class="titleActorPages">Total des bonus et malus : {{system.ss_stats.totalmod.value}}</h4>
        </aside>

    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
       {{> "systems/shinzo/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Owned Spells Tab & Owned Features Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      <h4 class="titleActorPages">Traits</h4>
      {{> "systems/shinzo/templates/actor/parts/actor-traits.hbs"}}
      <h4 class="titleActorPages">Compétences</h4>
      {{> "systems/shinzo/templates/actor/parts/actor-competences.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/shinzo/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>
