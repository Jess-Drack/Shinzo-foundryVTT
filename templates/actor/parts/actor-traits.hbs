<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-effects'>Effets</div>
    {{#if editable}}
      <div class='item-controls'>
        <a class='item-control item-create' title='{{localize 'DOCUMENT.New' type='trait'}}' data-type='trait'>
          <div class="add">
            <i class="fa-solid fa-plus"></i>
          </div>
        </a>
      </div>
    {{/if}}
  </li>
  {{#each trait as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='Item'}}'>
          <p>{{item.name}}</p>
        </a>
      </div>
      <div class='item-effects item-prop'>{{system.effect}}</div>
      {{#if ../editable}}
        <div class='item-controls'>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='Item'}}'>
            <i class="fas fa-edit"></i>
          </a>
          <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Item'}}'>
            <i class='fas fa-trash'></i>
          </a>
        </div>
      {{/if}}
    </li>
  {{/each}}
</ol>