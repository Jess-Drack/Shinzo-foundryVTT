<ol class='items-list'>
  <h2 class="titleActorPages">Armes</h2>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-degat'>Dégâts</div>
    <div class='item-controls'>
      {{#if editable}}
        <a class="item-control item-create" title="{{localize 'DOCUMENT.Create' type='Item'}}"
        data-type="arme">
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='arme'}}
        </a>
      {{/if}}
    </div>
  </li>
  {{#each arme as |item id|}}
    {{#if item.system.equiped }}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Item'}}'>
            <h4>{{item.name}}</h4>
          </a>
        </div>
        <a class='deArme' data-formule='{{item.system.damage}}' data-nom='{{item.name}}'>
          <div class='item-formula item-prop'>{{item.system.damage}}</div>
        </a>
        <div class='item-controls'>
          <div class='item-equiped'>
            <input type='checkbox' name="item.system.equiped" title="{{#if item.system.equiped}} Équipé {{else}} Non-équipé {{/if}}" class="equiped-toggle radio-style" {{#if item.system.equiped}}checked{{/if}} />
          </div>
          {{#if ../editable}}
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Item'}}'>
              <i class="fas fa-edit"></i>
            </a>
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Item'}}'>
              <i class='fas fa-trash'></i>
            </a>
          {{/if}}
        </div>
      </li>
    {{/if}}
  {{/each}}
</ol>

